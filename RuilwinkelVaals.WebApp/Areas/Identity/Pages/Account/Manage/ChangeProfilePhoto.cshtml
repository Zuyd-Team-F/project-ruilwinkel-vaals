@page
@model ChangeProfilePhotoModel
@{
    ViewData["Title"] = "Profiel foto";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">Foto</div>
                        <img src="~/img/storage/users/@Model.Input.CurrentImage" />
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <label asp-for="Input.Image" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="Input.Image" class="custom-file-input" id="customFile" />
                        <label class="custom-file-label" for="customFile">Kies een foto</label>
                    </div>
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary">Verander</button>
                </div>
            </div>          
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/imageUpload.min.js"></script>
} 