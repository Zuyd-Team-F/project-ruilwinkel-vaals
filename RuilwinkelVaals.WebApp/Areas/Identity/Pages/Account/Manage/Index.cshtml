@page
@model IndexModel
@{
    ViewData["Title"] = "Profiel";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <label asp-for="Input.Firstname"></label>
                        <input asp-for="Input.Firstname" class="form-control" />
                    </div>
                    <div class="col-sm">
                        <label asp-for="Input.Lastname"></label>
                        <input asp-for="Input.Lastname" class="form-control" />
                    </div>
                </div>
            </div>
           
            <div class="col-sm">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" disabled />
            </div>        
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Input.Street"></label>
                        <input asp-for="Input.Street" class="form-control" />
                    </div>
                    <div class="col-sm">
                        <label asp-for="Input.StreetNumber"></label>
                        <input asp-for="Input.StreetNumber" class="form-control" />
                    </div>
                    <div class="col-sm">
                        <label asp-for="Input.StreetAdd"></label>
                        <input asp-for="Input.StreetAdd" class="form-control" />
                    </div>
                </div>
            </div>       
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <label asp-for="Input.PostalCode"></label>
                        <input asp-for="Input.PostalCode" class="form-control" />
                    </div>
                    <div class="col-sm">
                        <label asp-for="Input.City"></label>
                        <input asp-for="Input.City" class="form-control" />
                    </div>
                </div>
            </div>           
            <div class="col-sm">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="col-sm">
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}