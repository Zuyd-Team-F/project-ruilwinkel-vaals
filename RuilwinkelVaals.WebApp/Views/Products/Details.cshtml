@model RuilwinkelVaals.WebApp.Data.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            <img src="~/img/products/@Model.Image"
                 class="rounded-circle"
                 height="100" width="100"
                 asp-append-version="true" />
        </dt>
        <dt class="col-sm-2">            
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Condition.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreditValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditValue)
        </dd>
    </dl>
</div>
<div>
    @if (!User.IsInRole("User")) 
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Product wijzigen</a> 
    }
    <a asp-action="Index">Terug naar overzicht</a>
</div>
